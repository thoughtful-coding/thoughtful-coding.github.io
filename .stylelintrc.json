{
  "extends": "stylelint-config-standard",
  "plugins": ["stylelint-order"],
  "rules": {
    "comment-empty-line-before": null,
    "comment-whitespace-inside": null,

    "color-no-hex": [
      true,
      {
        "message": "Use CSS variables instead of hex colors (e.g., var(--primary) instead of #4b8bbe)"
      }
    ],

    "function-disallowed-list": [
      ["rgb", "rgba", "hsl", "hsla"],
      {
        "message": "Use CSS variables instead of color functions (e.g., var(--primary) instead of rgb())"
      }
    ],

    "declaration-property-value-disallowed-list": {
      "/^border/": ["/^#/", "/rgb/", "/hsl/"],
      "/^background/": ["/^#/", "/rgb/", "/hsl/"],
      "/^color/": ["/^#/", "/rgb/", "/hsl/"],
      "/^box-shadow/": ["/rgba?\\(/"],
      "/^text-shadow/": ["/rgba?\\(/"],
      "/^outline/": ["/^#/", "/rgb/", "/hsl/"]
    },

    "selector-class-pattern": null,

    "order/properties-alphabetical-order": null,

    "custom-property-pattern": [
      "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$",
      {
        "message": "CSS variables should be kebab-case (e.g., --my-color)"
      }
    ],

    "declaration-block-no-duplicate-properties": [
      true,
      {
        "ignore": ["consecutive-duplicates-with-different-values"]
      }
    ],

    "no-duplicate-selectors": true,

    "font-family-no-missing-generic-family-keyword": true,

    "max-nesting-depth": [
      3,
      {
        "message": "Avoid deep nesting (max 3 levels) for better specificity management"
      }
    ],

    "selector-max-specificity": null,

    "no-descending-specificity": null,

    "value-keyword-case": [
      "lower",
      {
        "ignoreProperties": ["font-family", "composes"]
      }
    ],

    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["composes"]
      }
    ],

    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["global", "local"]
      }
    ],

    "selector-type-no-unknown": [
      true,
      {
        "ignoreTypes": ["viewcontainer"]
      }
    ]
  },
  "ignoreFiles": [
    "node_modules/**",
    "dist/**",
    "build/**",
    "coverage/**"
  ],
  "overrides": [
    {
      "files": ["**/index.css", "**/static-seo.css"],
      "rules": {
        "color-no-hex": null,
        "function-disallowed-list": null,
        "declaration-property-value-disallowed-list": null
      }
    },
    {
      "files": ["**/*.module.css"],
      "rules": {
        "selector-class-pattern": null
      }
    }
  ]
}
